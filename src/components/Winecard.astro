---
const { wine } = Astro.props;
const { subtitle1 } = Astro.props;
const { subtitle2 } = Astro.props;
const { desc } = Astro.props;
import { Image } from "astro:assets";
import placeholderWine from "../assets/placeholderWine.png";
---

<div class="card">
  <Image src={placeholderWine} alt="" />
  <div class="content">
    <h5>{wine}</h5>
    <h6>{subtitle1}</h6>
    <h6>{subtitle2}</h6>
    <p>{desc}</p>
  </div>
  <div class="overlay"></div>
</div>

<style>
  .card {
    width: 300px;
    height: 350px;
    border-radius: 10px;
    background: linear-gradient(180deg, rgba(65, 20, 21, 0) 0%, #692a2a 100%);
    display: grid;
    grid-template-rows: 1fr 1fr;
    grid-template-columns: 1fr;
  }
  img {
    justify-self: center;
    grid-row: 1 / 3;
    grid-column: 1 / 2;
  }
  .content {
    grid-row: 3 / 4;
    grid-column: 1 / 2;
    padding-left: 10px;
    padding-bottom: 10px;
    z-index: 1;
  }
  .overlay {
    grid-row: 1 / 4;
    grid-column: 1 / 2;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.7) 100%);
  }
  h5,
  h6,
  p {
    color: var(--color-white);
  }
  h5 {
    font-size: 20px;
    padding-bottom: 20px;
  }
  h6 {
    font-size: 14px;
  }
  p {
    font-size: 12px;
    padding-top: 10px;
  }
</style>
