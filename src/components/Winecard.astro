---
const { wine } = Astro.props;
const { subtitle } = Astro.props;
const { subtitle2 } = Astro.props;
const { desc } = Astro.props;
import { Image } from "astro:assets";
import placeholderWine from "../assets/placeholderWine.png";
---

<div class="card">
  <Image src={placeholderWine} alt="" />
  <div class="content">
    <h3>{wine}</h3>
    <h4>{subtitle}</h4>
    <h4>{subtitle2}</h4>
    <p>{desc}</p>
  </div>
  <div class="overlay"></div>
</div>

<style>
  .card {
    width: 300px;
    height: 350px;
    border-radius: 10px;
    background: linear-gradient(180deg, rgba(65, 20, 21, 0) 0%, #692a2a 100%);
    display: grid;
    grid-template-rows: 1fr 1fr;
    grid-template-columns: 1fr;
  }
  img {
    justify-self: center;
    grid-row: 1 / 3;
    grid-column: 1 / 2;
  }
  .content {
    grid-row: 2 / 4;
    grid-column: 1 / 2;
    padding-left: 10px;
  }
  .overlay {
    grid-row: 1 / 4;
    grid-column: 1 / 2;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.7) 100%);
  }
</style>
