---
import { Image } from "astro:assets";
import placeholder from "../assets/placeholder.webp";
---

<div class="headergrid">
  <div class="redoverlay">
    <div class="headercontent">
      <h1>Kontakt os</h1>
      <p>Kohaven 15, 5300 Kerteminde</p>
    </div>
  </div>
  <Image src={placeholder} alt="" />
</div>

<style>
  .redoverlay {
    background: linear-gradient(180deg, rgba(65, 20, 21, 0) 0%, rgba(65, 20, 21, 1) 100%);
    width: 100%;
    height: 500px;
    grid-row: 1 / 2;
    grid-column: 1 / 2;
    z-index: 1;
  }
  .headergrid {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    position: relative;
  }
  img {
    grid-row: 1 / 2;
    grid-column: 1 / 2;
    width: 100%;
    height: 500px;
  }
  .headercontent {
    position: absolute;
    bottom: 30px;
    left: 40px;
    color: white;
    z-index: 2;
  }

  @media (min-width: 600px) {
    .headercontent h1 {
      font-size: 2.5rem;
    }
    .headercontent p {
      font-size: 1.2rem;
    }
  }

  @media (min-width: 900px) {
    .headercontent h1 {
      font-size: 3rem;
    }
    .headercontent p {
      font-size: 1.4rem;
    }
  }
</style>
