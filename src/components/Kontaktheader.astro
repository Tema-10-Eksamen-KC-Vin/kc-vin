---
import { Image } from "astro:assets";
import kontakthero from "../assets/kontakthero.webp";
import Navbar from "./Navbar.astro";
---

<header>
  <div class="headergrid">
    <nav class="navbar">
      <Navbar />
    </nav>
    <div class="redoverlay">
      <div class="headercontent">
        <h1>Kontakt os</h1>
      </div>
    </div>
    <Image src={kontakthero} alt="" />
  </div>
</header>

<style>
  .redoverlay {
    background: linear-gradient(180deg, rgba(65, 20, 21, 0) 0%, rgba(65, 20, 21, 1) 100%);
    width: 100%;
    height: 500px;
    grid-row: 1 / 2;
    grid-column: 1 / 2;
    z-index: 1;
  }
  .headergrid {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    position: relative;
    max-height: 100vh;
    overflow: hidden;
  }
  .navbar {
    grid-column: 1 / 2;
    grid-row: 1 / 2;
  }
  img {
    grid-row: 1 / 2;
    grid-column: 1 / 2;
    width: 100%;
    height: 500px;
    object-fit: cover;
  }
  .headercontent {
    position: absolute;
    bottom: 30px;

    color: white;
    z-index: 2;
    padding-left: 5vw;
    padding-bottom: 2vw;
  }
</style>
