<style>
  a {
    color: var(--color-bg-beige);
  }

  section {
    background-color: var(--color-bg-beige);
    background-image: url(/src/assets/omos_vinsmag_background.png);
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center;
    background-size: cover;
    height: 100vw;
    color: var(--color-bg-beige);
  }

  .indhold {
    padding: 0 50px;
    padding-top: 110px;
    width: auto;
  }

  h2 {
    width: auto;
    line-height: 2rem;
  }

  p {
    padding-bottom: 1rem;
  }

  a:hover {
    color: var(--color-white);
  }

  @media (min-width: 800px) {
    section {
      height: 45vw;
    }

    .indhold {
      padding: 175px;
      padding-top: 50px;
      width: auto;
    }

    h2 {
      width: 500px;
      line-height: 4rem;
    }
  }

  @media (min-width: 1100px) {
    .indhold {
      padding-top: 200px;
    }
  }

  @media (max-width: 400px) {
    section {
      height: 60vh;
      width: 100%;
      line-height: 3rem;
    }
  }
