---
import Glass from "../assets/illustrationer/illustrationer-01.svg";
import Cutlery from "../assets/illustrationer/illustrationer-05.svg";
import Dish from "../assets/illustrationer/illustrationer-02.svg";
import Bottle from "../assets/illustrationer/illustrationer-03.svg";

const producers = [
  { name: "Giovanni Rosso", desc: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros." },
  { name: "Domaine Lamy-Pillot", desc: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros." },
  { name: "Domaine Hauvette", desc: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros." },
  { name: "Jean Chartron", desc: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros." },
  { name: "Maison Brunet Randon", desc: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros." },
  { name: "Antoine Lepetit", desc: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros." },
  { name: "SAB’S", desc: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros." },
  { name: "Drouhin-Laroze", desc: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros." },
];
---

<section>
  <div class="winelist-bg">
    <div class="winelist-content">
      <h2 class="winelist-title">Udforsk vores udvalg af vinproducenter</h2>
      <div class="winelist-subtitle">Vi kender dem personligt, besøger dem løbende – og vi vælger kun vine, vi selv elsker at drikke.</div>
      <div class="producer-list">
        {
          producers.map(({ name, desc }) => (
            <div class="producer-item">
              <div class="producer-info">
                <h3 class="producer-name">{name}</h3>
                <div class="producer-desc">{desc}</div>
              </div>
              <a href="#" class="read-more">
                Læs mere
                <span aria-hidden="true" style="display:inline-block; width:1em; height:1em;">
                  <svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="9 6 15 12 9 18" />
                  </svg>
                </span>
              </a>
            </div>
          ))
        }
      </div>
    </div>
    <Glass class="bg-svg bg-glass" />
    <Cutlery class="bg-svg bg-cutlery" />
    <Dish class="bg-svg bg-dish" />
    <Bottle class="bg-svg bg-bottle" />
  </div>
</section>

<style>
  section {
    background: var(--color-bg-red);
    padding-block: 6rem;
  }
  .winelist-bg {
    position: relative;
    color: var(--color-white);
    padding: 6rem 2rem 2rem 2rem;
    overflow: hidden;
    min-height: 100vh;
  }
  .winelist-content {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
    min-height: 700px;
  }

  .bg-svg {
    position: absolute;
    opacity: 0.12;
    z-index: 0;
    color: var(--color-red-light);
    pointer-events: none;
    transition:
      width 0.3s,
      top 0.3s,
      left 0.3s,
      right 0.3s,
      bottom 0.3s;
  }

  .bg-glass {
    left: 250px;
    top: 40px;
    width: 200px;
  }
  .bg-cutlery {
    left: 250px;
    bottom: 150px;
    width: 250px;
  }
  .bg-dish {
    right: 250px;
    top: 150px;
    width: 250px;
  }
  .bg-bottle {
    right: 300px;
    bottom: 60px;
    width: 140px;
  }
  .winelist-title {
    text-align: center;
    margin-bottom: 0.5rem;
    padding-block: 2rem;
  }
  .winelist-subtitle {
    text-align: center;
    margin-bottom: 4rem;
    color: #e5cfcf;
    font-size: 1.1rem;
  }
  .producer-list {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }
  .producer-item {
    border-bottom: 1px solid #fff2;
    padding-bottom: 2rem;
    display: flex;
    align-items: end;
    justify-content: space-between;
    gap: 2rem;
  }
  .producer-info {
    flex: 1;
  }
  .producer-name {
    font-size: 2rem;
    margin-bottom: 0.2rem;
  }
  .producer-name::first-letter {
    font-family: var(--accentfont);
    font-size: 4rem;
    font-weight: 400;
    font-style: normal;
  }
  .producer-desc {
    color: #e5cfcf;
    font-size: 1rem;
  }

  @media (max-width: 1000px) {
    .winelist-content {
      padding: 0 0.5rem;
      min-height: unset;
    }
    .bg-glass {
      left: 2vw;
      top: 2vw;
      width: 38vw;
      max-width: none;
    }
    .bg-cutlery {
      left: 2vw;
      bottom: 60vw;
      width: 36vw;
      max-width: none;
    }
    .bg-dish {
      right: 2vw;
      top: 80vw;
      width: 28vw;
      max-width: none;
    }
    .bg-bottle {
      right: 2vw;
      bottom: 8vw;
      width: 18vw;
      max-width: none;
    }
  }
</style>
