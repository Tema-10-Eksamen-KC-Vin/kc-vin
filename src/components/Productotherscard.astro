---
import { Image } from "astro:assets";
import placeholderWine from "../assets/placeholderWine.png";
const { title } = Astro.props;
const { desc } = Astro.props;

import { createClient } from "@supabase/supabase-js";

const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;

const supabase = createClient(supabaseUrl, supabaseKey);

// Fetch vinliste fra Supabase
const { data: producers, error } = await supabase.from("Winelist").select("*");
---

{
  producers && producers.length > 0 ? (
    producers.map(({ slug, name, description, logo }) => (
      <div class="card">
        <img src={logo} alt="" />
        <div class="content">
          <h3>{name}</h3>
          <p>{description}</p>
        </div>
        <a href={`/product/${slug}`} class="read-more">
          LÃ¦s mere
          <span aria-hidden="true" style="display:inline-block; width:1em; height:1em;">
            <svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 6 15 12 9 18" />
            </svg>
          </span>
        </a>
      </div>
    ))
  ) : (
    <div>Ingen producenter fundet.</div>
  )
}

<style>
  .card {
    width: 500px;
    border-radius: 5px;
    background: #faedcd;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto 1fr;
  }
  img {
    max-width: 270px;
    height: 304px;
    padding: 10px;
    justify-self: center;
    object-fit: contain;
  }
  .content {
    padding-left: 10px;
    grid-column: 1 / 2;
    grid-row: 2 / 5;
    display: flex;
    flex-direction: column;
  }
  a {
    color: var(--color-black);
    padding-left: 10px;
    padding-bottom: 20px;
  }
  a:hover {
    color: var(--color-red-light);
  }
  @media screen and (min-width: 800px) {
    .card {
      max-width: 509px;
    }
    img {
      width: 478px;
      max-height: 494px;
    }
  }
</style>
