---
import { Image } from "astro:assets";
import placeholderWine from "../assets/placeholderWine.png";
const { title } = Astro.props;
const { desc } = Astro.props;
---

<div class="card">
  <Image src={placeholderWine} alt="" />
  <div class="content">
    <h3>{title}</h3>
    <p>{desc}</p>
  </div>
</div>

<style>
  .card {
    width: 509px;
    height: 666px;
    border-radius: 10px;
    background: #faedcd;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 2fr 1fr;
  }
  img {
    width: 478px;
    height: 494px;
    padding: 10px;
    grid-column: 1 / 2;
    grid-row: 1 / 2;
  }
  .content {
    padding-left: 10px;
    grid-column: 1 / 2;
    grid-row: 2 / 3;
  }
</style>
