---
const { date, header, name1, name2, text, eventimg } = Astro.props;

import Udvalgtevinebutton from "./Udvalgtevinebutton.astro";
---

<article>
  <div class="img_container">
    <img src={eventimg.src} alt="Profilbillede" loading="lazy" />
  </div>

  <h6>{date}</h6>
  <h4>{header}</h4>
  <div class="content">
    <h6>Arrang√∏rer</h6>
    <p>{name1}</p>
    <p>{name2}</p>
  </div>
  <div class="content">
    <h6>Info</h6>
    <p>{text}</p>
  </div>
  <div class="margin">
    <Udvalgtevinebutton link="/eventpage" linktekst="Se detaljer" color="alightred" />
  </div>
</article>

<style>
  .margin {
    margin: 20px 20px 40px 20px;
  }

  article {
    background-color: var(--color-red-light);
    border-radius: 7px;
    display: grid;
    /* grid-template-columns: subgrid; */
    grid-template-rows: subgrid;
    grid-row: 1 / 7;
    gap: 40px;
    margin: 0px;
    min-width: 340px;
  }

  @media screen and (min-width: 1000px) {
    article {
      margin: 50px;
    }
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    color: var(--color-bg-beige);
    padding-left: 20px;
    padding-right: 20px;
  }

  .bold {
    margin-top: 20px;
  }
  .img_container {
    width: 100%;
    height: 400px;
    overflow: hidden;
    max-height: 400px;

    overflow: hidden;
    grid-row: 1 / 2;
    border-radius: 5px 5px 0px 0px;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media screen and (min-width: 800px) {
    article {
      margin: 0px;
    }
  }
</style>
