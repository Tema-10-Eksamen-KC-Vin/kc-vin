<style>
  /* Reset and base styles */
  #main-navbar {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    position: relative;
    z-index: 1000;
  }

  #main-navbar *,
  #main-navbar *::before,
  #main-navbar *::after {
    box-sizing: border-box;
  }

  .nav-container {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .nav-wrapper {
    display: flex;
    justify-content: center;
    height: 4rem;
    position: relative;
  }

  /* Desktop Navigation */
  .nav-desktop {
    display: none;
    align-items: center;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .nav-desktop {
      display: flex;
    }
  }

  .nav-link {
    position: relative;
    color: var(--color-black);
    font-weight: 500;
    padding: 0.5rem 0;
    text-decoration: none;
    background: none;
    border: none;
    font-size: 1rem;
    cursor: pointer;
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    font-weight: 900;
  }

  .nav-underline {
    position: absolute;
    height: 2px;
    background-color: black;
    bottom: 0;
    left: 0;
    right: 0;
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.3s ease;
  }

  .nav-link:hover .nav-underline {
    transform: scaleX(1);
  }

  /* Dropdown - UPDATED STYLING */
  .dropdown-container {
    position: relative;
  }

  .dropdown-menu {
    position: fixed;
    left: 0;
    right: 0;
    top: 0rem; /* Height of navbar */
    width: 100%;
    background-color: #faedcd;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: all 0.3s ease;
    transform-origin: top;
    z-index: 1;
    opacity: 0;
    transform: translateY(-100%);
    pointer-events: none;
  }

  .dropdown-container:hover .dropdown-menu {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .dropdown-content {
    display: flex;
    padding: 2rem;
    position: relative;
    max-width: 80rem;
    margin: 0 auto;
  }

  .dropdown-column {
    flex: 1;
    padding: 0 2rem;
  }

  .dropdown-divider {
    width: 1px;
    background-color: rgba(0, 0, 0, 0.15);
    position: absolute;
    top: 2rem;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
  }

  .column-title {
    font-weight: bold;
    margin-bottom: 1.5rem;
    color: #111827;
    font-size: 2rem;
  }

  .region-title {
    font-weight: 600;
    margin-bottom: 0.5rem;
    margin-top: 1.5rem;
    color: #111827;
    font-size: 1.25rem;
  }

  .column-list {
    list-style: none;
    margin: 0;
    padding: 0 0 0 1rem;
  }

  .column-list li {
    margin-bottom: 0.5rem;
  }

  .column-list li::before {
    content: "•";
    margin-right: 0.5rem;
    color: #4b5563;
  }

  .dropdown-link {
    color: #374151;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .dropdown-link:hover {
    color: black;
  }

  /* Mobile menu button */
  .mobile-menu-button-container {
    display: flex;
    align-items: center;
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
  }

  @media (min-width: 768px) {
    .mobile-menu-button-container {
      display: none;
    }
  }

  .mobile-menu-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    border-radius: 0.375rem;
    color: #374151;
    background: none;
    border: none;
    cursor: pointer;
    transition: color 0.3s ease;
  }

  .mobile-menu-button:hover {
    color: black;
  }

  .menu-icon {
    height: 1.5rem;
    width: 1.5rem;
  }

  .close-icon {
    display: none;
  }

  .mobile-menu-button.active .menu-icon {
    display: none;
  }

  .mobile-menu-button.active .close-icon {
    display: block;
  }

  /* Mobile menu */
  .mobile-menu {
    display: block;
    transition: all 0.3s ease;
    overflow: hidden;
    max-height: 0;
  }

  @media (min-width: 768px) {
    .mobile-menu {
      display: none;
    }
  }

  .mobile-menu.active {
    max-height: 100vh;
  }

  .mobile-menu-content {
    padding: 0.5rem;
    padding-top: 0.5rem;
    padding-bottom: 0.75rem;
    background-color: #faedcd;
  }

  .mobile-nav-link {
    display: block;
    padding: 0.5rem 1rem;
    color: #1f2937;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: background-color 0.3s ease;
  }

  .mobile-nav-link:hover {
    background-color: #f3f4f6;
  }

  /* Mobile dropdown */
  .mobile-dropdown {
    padding: 0.25rem 0;
  }

  .mobile-dropdown-button {
    width: 100%;
    text-align: left;
    display: block;
    padding: 0.5rem 1rem;
    color: #1f2937;
    background: none;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-size: 1rem;
  }

  .mobile-dropdown-button:hover {
    background-color: #f3f4f6;
  }

  .mobile-dropdown-content {
    transition: all 0.3s ease;
    overflow: hidden;
    max-height: 0;
    background-color: #faedcd;
  }

  .mobile-dropdown-content.active {
    max-height: 100vh;
  }

  .mobile-dropdown-inner {
    padding: 0.5rem 1.5rem 0.5rem 1rem;
  }

  .mobile-column {
    margin-bottom: 1.5rem;
  }

  .mobile-column-title {
    font-weight: bold;
    margin-bottom: 1rem;
    color: #111827;
    font-size: 1.5rem;
  }

  .mobile-region-title {
    font-weight: 600;
    margin-bottom: 0.5rem;
    margin-top: 1rem;
    color: #111827;
    font-size: 1.1rem;
  }

  .mobile-column-list {
    list-style: none;
    margin: 0 0 1rem 0;
    padding: 0 0 0 1rem;
  }

  .mobile-column-list li {
    margin-bottom: 0.5rem;
  }

  .mobile-column-list li::before {
    content: "•";
    margin-right: 0.5rem;
    color: #4b5563;
  }

  .mobile-dropdown-link {
    display: inline;
    color: #374151;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .mobile-dropdown-link:hover {
    color: black;
  }

  .mobile-divider {
    width: 100%;
    height: 1px;
    background-color: rgba(0, 0, 0, 0.15);
    margin: 1rem 0;
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const mobileDropdownButton = document.getElementById("mobile-dropdown-button");
    const mobileDropdownContent = document.getElementById("mobile-dropdown-content");

    // Mobile menu toggle
    if (mobileMenuButton) {
      mobileMenuButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("active");
        mobileMenuButton.classList.toggle("active");
      });
    }

    // Mobile dropdown toggle
    if (mobileDropdownButton) {
      mobileDropdownButton.addEventListener("click", () => {
        mobileDropdownContent.classList.toggle("active");
      });
    }

    // Close mobile menu on window resize
    window.addEventListener("resize", () => {
      if (window.innerWidth >= 768) {
        mobileMenu.classList.remove("active");
        mobileMenuButton.classList.remove("active");
        mobileDropdownContent.classList.remove("active");
      }
    });
  });
</script>
