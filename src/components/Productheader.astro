---
import { Image } from "astro:assets";
const { title } = Astro.props;
const { subtitle } = Astro.props;
import Navbar from "./Navbar.astro";
const { img } = Astro.props;
---

<header class="headergrid">
  <div class="navbar">
    <Navbar />
  </div>
  <div class="redoverlay">
    <div class="grid">
      <div class="headercontent">
        <h1>{title}</h1>
        <p>{subtitle}</p>
      </div>
    </div>
  </div>
  <img src={img} alt="" />
</header>

<style>
  .navbar {
    grid-column: 1 / 2;
    grid-row: 1 / 2;
  }
  .redoverlay {
    background: linear-gradient(180deg, rgba(65, 20, 21, 0) 0%, rgba(65, 20, 21, 1) 100%);
    width: 100%;
    height: 648px;
    grid-row: 1 / 2;
    grid-column: 1 / 2;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
  }
  .grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    width: 100%;
    height: 100%;
    padding: 0px 50px 0px 50px;
    max-width: 1450px;
    margin: auto;
    grid-row: 1 / 2;
    grid-column: 1 / 2;
  }
  .headergrid {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    max-height: 900px;
  }
  .navbar {
    grid-column: 1 / 2;
    grid-row: 1 / 2;
  }
  img {
    grid-row: 1 / 2;
    grid-column: 1 / 2;
    width: 100%;
    height: 648px;
    object-fit: cover;
  }
  .headercontent {
    color: var(--color-white);
    grid-row: 2 / 3;
    grid-column: 1 / 3;
    align-content: center;
  }
</style>
