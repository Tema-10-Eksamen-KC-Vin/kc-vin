  /* Logo sektion */
  .logo-section {
    margin: auto;
  }

  .logo-container {
    width: 400px;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo {
    width: 400px;
    height: 400px;
    object-fit: contain;
  }
