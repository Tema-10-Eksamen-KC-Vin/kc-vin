<div class="formbaggrund">
  <form class="kontaktform">
    <h3>For generelle henvendelser udfyld her:</h3>

    <label for="navn">Navn</label>
    <input type="text" id="navn" name="navn" required />

    <label for="email">Email</label>
    <input type="email" id="email" name="email" required />

    <label for="emne">Emne</label>
    <input type="text" id="emne" name="emne" required />

    <label for="Besked">Besked</label>
    <textarea name="besked" id="besked" required></textarea>

    <button type="submit">Send</button>
  </form>
</div>

<style>
  .formbaggrund {
    background-color: #411415;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
  }

  .kontaktform {
    width: 500px;
  }

  label {
    display: block;
    margin-top: 15px;
    font-size: 1.2rem;
    color: white;
  }

  input,
  textarea {
    width: 70%;
    padding: 12px;
    background-color: #faedcd;
    border: none;
    border-radius: 6px;
    margin-top: 5px;
    color: #000;
  }
  h3 {
    color: white;
  }
  textarea {
    height: 120px;
    resize: vertical;
  }

  button {
    margin-top: 20px;
    padding: 10px 30px;
    font-size: 1rem;
    background-color: transparent;
    border: 1px solid #fdf5e6;
    color: #fdf5e6;
    border-radius: 6px;
    cursor: pointer;
    width: 50%;
  }
</style>
